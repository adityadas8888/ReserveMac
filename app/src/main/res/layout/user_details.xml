<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Reservation Details"
            android:textColor="@color/colorTextWhite"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:layout_marginTop="200dp"
        android:textSize="12dp"
        android:text="Click to view more details"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:textColor="#000000"
        android:layout_height="wrap_content">
    </Button>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"> <!-- stretch the second column of the layout-->

        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView

                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Username"
                android:textColor="#000"
                android:padding="1dp"
                android:textSize="16dp" />


            <TextView
                android:padding="1dp"
                android:id="@+id/facility_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="First Name"
                android:textColor="#000"
                android:textSize="16dp" />
            <TextView
                android:padding="1dp"
                android:id="@+id/Date_booked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Last Name"
                android:textColor="#000"
                android:textSize="16dp" />

        </TableRow>
        <TableRow

            android:id="@+id/secondRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView

                android:id="@+id/facilityname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTextWhite"
                android:text="1001675"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/facilitydetails1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTextWhite"
                android:text="Aditya"
                android:textColor="#000"
                android:textSize="16dp" />
            <TextView

                android:id="@+id/reservationdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTextWhite"
                android:padding="1dp"
                android:text="Das"
                android:textColor="#000"
                android:textSize="14dp" />

        </TableRow>
    </TableLayout>

</LinearLayout>