        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="Select Date" />

        <EditText
            android:id="@+id/EtxDatePicker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="10/23/2019" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Select Time" />

        <EditText
            android:id="@+id/EtxTimePicker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="12:00 PM" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Deposit:" />

        <TextView
            android:id="@+id/TxtDeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="$50"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/BtnModifyReservation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimary"
            android:text="Modify Reservation"
            android:textColor="@color/colorTextWhite" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="100dp"
            android:text="Reservation Modified !"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/ic_rect"/>

    </LinearLayout>

